<div class="study-record">
  <div class="study-record-wrapper">
    <div class="study_record-title">
      <p>学習記録を保存</p>
    </div>
    <div class="study-record-form">
        <%= form_for @study_record, url: {action: "create"}, class: "study-record-columns" do |f| %>
          <div class="form-group">
            <%= f.label :category, "Category", class:"form-label" %>
            <%= f.collection_select :category_id, @category, :id, :name, {}, class: "form-control" %>
          </div>
          <%= f.label :title, "Title", class:"form-label" %>
          <%= f.text_field :title, placeholder: "Title", class:"auth-form-password" %>

          <%= f.label :Hour, "Hour", class:"form-label" %>
          <%= f.text_field :hour, placeholder: "Hour", class:"auth-form-password" %>

          <%= f.label :Min, placeholder: "Min" %>
          <%= f.text_field :min, placeholder: "Min", class:"auth-form-password" %>

          <%= f.label :"Comment", placeholder: "Comment" %>
          <%= f.text_field :comment, placeholder: "Comment", class: "auth-form-password" %>

          <%= f.hidden_field :user_id, :value => current_user.id %>

        <%= f.submit "勉強を記録", class: "form-submit"%>
      <% end %>
    </div>
  </div>
</div>
