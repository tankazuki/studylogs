.top{
  width: 100%;
  height: 1000px;
  background-color: white;
  background-image: url(<%= asset_path 'top-background.jpg' %>);
  background-size: cover;
}
.top-layouts{
  margin: 0 auto;
  width: 400px;
  height: 400px;
  background-color: white;
}
.top-heading{
  text-align: center;
  padding: 10px;
  margin-bottom: 30px;
  letter-spacing: 2px;
}

.auth-buttons{
  width: 100%;
  height: 100%;
  margin: auto;
  text-align: center;
  letter-spacing: 2px;
}

.top-auth-button{
  display: inline-block;
  background: #30C8D6;
  margin-bottom: 100px;
  box-shadow: 3px 3px 3px rgba(0,0,0,0.6);
}

.top-auth-button:hover{
  opacity: 0.7;
}
